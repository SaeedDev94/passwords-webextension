{
    "manifest_version"         : 2,
    "name"                     : "__MSG_extensionName__",
    "version"                  : "2.0.1.BUILD",
    "description"              : "__MSG_extensionDescription__",
    "author"                   : "Marius Wieschollek",
    "default_locale"           : "en",
    "icons"                    : {
        "16" : "img/passwords-16.png",
        "32" : "img/passwords-32.png",
        "48" : "img/passwords-48.png",
        "96" : "img/passwords-96.png",
        "128": "img/passwords-128.png"
    },
    "browser_action"           : {
        "default_icon" : "img/passwords.svg",
        "default_title": "__MSG_browserActionTitle__",
        "default_popup": "html/popup.html",
        "browser_style": true,
        "theme_icons"  : [
            {
                "light": "img/passwords-light.svg",
                "dark" : "img/passwords-dark.svg",
                "size" : 12
            },
            {
                "light": "img/passwords-light.svg",
                "dark" : "img/passwords-dark.svg",
                "size" : 16
            },
            {
                "light": "img/passwords-light.svg",
                "dark" : "img/passwords-dark.svg",
                "size" : 32
            },
            {
                "light": "img/passwords-light.svg",
                "dark" : "img/passwords-dark.svg",
                "size" : 64
            },
            {
                "light": "img/passwords-light.svg",
                "dark" : "img/passwords-dark.svg",
                "size" : 96
            },
            {
                "light": "img/passwords-light.svg",
                "dark" : "img/passwords-dark.svg",
                "size" : 128
            }
        ]
    },
    "options_ui"               : {
        "page"         : "html/options.html",
        "browser_style": true
    },
    "browser_specific_settings": {
        "gecko": {
            "id"                : "ncpasswords@mdns.eu",
            "strict_min_version": "57.0"
        }
    },
    "background"               : {
        "scripts": [ "js/background.js" ]
    },
    "content_security_policy"  : "script-src 'self' blob:; object-src 'self';",
    "content_scripts"          : [
        {
            "matches"   : [
                "http://*/*",
                "https://*/*"
            ],
            "js"        : [ "js/client.js" ],
            "all_frames": true
        }
    ],
    "permissions"              : [
        "*://*/*",
        "tabs",
        "storage",
        "notifications",
        "clipboardWrite"
    ]
}